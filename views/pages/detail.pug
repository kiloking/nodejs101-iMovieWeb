extends ../layout

block content
  .container
    .row
        .col-md-7
          embed(src=movie.flash , allowFullScreen="true" , quality="high" , width="720" , height="600" , align="middle" , type="application/x-shockwave-flash")
        .col-md-5
          dl.dl-horizontal
            dt 電影名稱
            dd= movie.title
            dt 導演
            dd= movie.director
            dt 國家
            dd= movie.country
            dt 語言
            dd= movie.language
            dt 年份
            dd= movie.year
            dt 簡介
            dd= movie.summary